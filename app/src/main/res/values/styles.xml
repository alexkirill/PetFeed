<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here.-->
        <item name="colorPrimaryDark">@color/colorBackgroundTitle</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColorHint">@color/hintcolor</item>
        <item name="colorPrimary">@color/colorBackgroundTitle</item>
        <item name="android:itemBackground">@color/colorBackground</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:buttonStyle">@style/LiteButton</item>
        <item name="android:dialogTheme">@style/AppCompatDialog</item>
        <item name="android:alertDialogTheme">@style/AlertTheme</item>

    </style>
    <style name="PreferencesTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorBackground</item>

    </style>
    <style name="ScheduleTheme" parent="AppTheme">

    </style>
    <style name="LiteButton"  parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@color/whitecolor</item>
        <item name="android:textColor">@color/colorBackgroundTitle</item>

    </style>
    <style name="BarButton"  parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/colorAccent</item>

    </style>
    <style name="AlertD" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
    <style name="AlertTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:buttonBarButtonStyle">@style/BarButton</item>
    </style>
    <style name="TimePickerTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="android:background">@color/colorBackgroundTitle</item>
        <item name="android:itemBackground">@color/whitecolor</item>
</style>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" >
        <item name="android:background">@color/colorBackground</item>
        <item name="android:itemBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/whitecolor</item>

    </style>

    <!-- Generic Dialog Theme -->
    <style name="AppCompatDialog" parent="Theme.AppCompat.Dialog">

        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <!-- Alert Dialog Theme -->
    <style name="AppCompatAlert" parent="Theme.AppCompat.Dialog.Alert">

        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
</resources>
